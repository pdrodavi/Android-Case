<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".ui.ConfigRouteActivity">

    <TextView
        android:id="@+id/textView_json"
        android:layout_width="299dp"
        android:layout_height="107dp"
        android:layout_marginTop="64dp"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_sendApi"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/colorMultiSelectHighlight"
        android:onClick="sendPost"
        android:text="VISUALIZAR"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_json" />

    <TextView
        android:id="@+id/textView_response"
        android:layout_width="303dp"
        android:layout_height="154dp"
        android:layout_marginTop="21dp"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_total_cost" />

    <TextView
        android:id="@+id/textView_distance"
        android:layout_width="300dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_sendApi" />

    <TextView
        android:id="@+id/textView_duration"
        android:layout_width="300dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_distance" />

    <TextView
        android:id="@+id/textView_fuel_usage"
        android:layout_width="300dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_duration" />

    <TextView
        android:id="@+id/textView_fuel_cost"
        android:layout_width="300dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_fuel_usage" />

    <TextView
        android:id="@+id/textView_total_cost"
        android:layout_width="300dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_fuel_cost" />
</androidx.constraintlayout.widget.ConstraintLayout>